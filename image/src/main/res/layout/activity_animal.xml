<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/choose_sex_bg"
    android:orientation="vertical"
    tools:context=".activity.AnimalActivity">

    <ImageView
        android:layout_width="@dimen/img_dp_40"
        android:layout_height="@dimen/img_dp_40"
        android:layout_marginLeft="@dimen/img_dp_20"
        android:layout_marginTop="@dimen/img_dp_10"
        android:layout_marginBottom="@dimen/img_dp_10"
        android:src="@mipmap/icon_exit_white" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_main_animal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/img_dp_4"
        android:paddingRight="@dimen/img_dp_4" />
</LinearLayout>